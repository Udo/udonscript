#!/bin/bash

# UdonScript Build Script

set -e  # Exit on error

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Default settings
TARGET="native"
BUILD_TYPE="debug"
EXTRA_MAKE_ARGS=()

for arg in "$@"; do
    case "$arg" in
        --clean)
            DO_CLEAN=1
            ;;
        --debug)
            BUILD_TYPE="debug"
            ;;
        --release)
            BUILD_TYPE="release"
            ;;
        --tests)
            DO_TESTS=1
            ;;
        --target)
            echo -e "${RED}Error:${NC} --target requires a value (e.g. windows)"
            exit 1
            ;;
        --target=*)
            TARGET="${arg#--target=}"
            ;;
        --target-windows|--windows)
            TARGET="windows"
            ;;
        *)
            ;;
    esac
done

echo -e "${GREEN}Building UdonScript (target: ${YELLOW}${TARGET}${GREEN}, build: ${YELLOW}${BUILD_TYPE}${GREEN})...${NC}"

if [[ -n "$DO_CLEAN" ]]; then
    echo -e "${YELLOW}Cleaning build directories...${NC}"
    rm -rf bin/*
    rm -rf tmp/*
fi

# Configure cross-compile options based on target
case "$TARGET" in
    windows)
        # Use MinGW cross-compiler if available
        if command -v x86_64-w64-mingw32-g++ >/dev/null 2>&1; then
            EXTRA_MAKE_ARGS+=("CXX=x86_64-w64-mingw32-g++")
            EXTRA_MAKE_ARGS+=("LDFLAGS=-static-libstdc++ -static-libgcc")
        else
            echo -e "${YELLOW}Warning:${NC} x86_64-w64-mingw32-g++ not found; building with default compiler instead."
        fi
        ;;
    native|*)
        ;;
esac

# Use make to build the project
EXTRA_MAKE_ARGS+=("BUILD_TYPE=${BUILD_TYPE}")
make "${EXTRA_MAKE_ARGS[@]}" all

echo -e "${GREEN}Build complete!${NC}"
echo -e "Executables are in: ${YELLOW}bin/${NC}"
echo -e "Intermediate files are in: ${YELLOW}tmp/${NC}"

if [[ -n "$DO_TESTS" ]]; then
    echo -e "${GREEN}Running tests...${NC}"
    ./bin/testrunner | grep "Results:"
fi
